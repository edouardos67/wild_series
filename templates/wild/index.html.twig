    <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}#}


    <h2>Toutes les séries de la table program : </h2>
    {% for program in programs %}
        <div class="media">
            <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h2 class="mt-0">{{ loop.index }} / <a href="{{ path('show_program', { 'programName': program.title|replace({' ': '-'})|lower }) }}">{{ program.title }}</a></h2>
                <p>{{ program.summary }}</p>
                <p>Categorie : {{ program.category.name }}</p>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

