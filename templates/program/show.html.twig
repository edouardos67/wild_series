{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path('actor_show', { 'slug_a': actor.slug_a }) }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
        {% for season in program.seasons %}
            <h4>Saison <a href="{{ path('season_show', { 'season': season, 'slug_p' : program.slug_p }) }}">{{ season.number }}</a></h4>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'slug_p': program.slug_p}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
