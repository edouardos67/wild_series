{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h4>Actor index</h4>

    <a href="{{ path('actor_new') }}">Create new</a><br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
{#                {{ dump(actor.sluga) }}#}
                <td>
                    <a href="{{ path('actor_show', {'sluga': actor.sluga }) }}">show</a>
                    <a href="{{ path('actor_edit', {'sluga': actor.sluga }) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
